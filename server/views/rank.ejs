<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/scripts/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="css/rank_style.css">
        <title>Ranklist</title>
    </head>
    <body>
        <section class="container">
            <h1>Ranklist</h1>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    <% ranklist.forEach(function(user, index) { %>
                    <tr>
                        <td><%= index + 1%></td>
                        <td><%= user.name %></td>
                        <td><%= user.score %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>            
        </section>
    </body>
</html>